                                <id>remove config file</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <echo>delete '${file.local.opencms-module-config}'</echo>
                                        <delete file="${file.local.opencms-module-config}"/>
                                        <echo>delete '${file.local.dump}'</echo>
                                        <delete file="${file.local.dump}"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
