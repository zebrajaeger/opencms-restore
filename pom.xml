<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.zebrajaeger</groupId>
    <artifactId>opencms-restore</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <root>${project.basedir}</root>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <file.local.dump>${data.dir}/${dump.id}.dbdump.sql</file.local.dump>
        <file.local.opencms-module-config>${data.dir}/${dump.id}.opencms-modules.xml</file.local.opencms-module-config>
        <file.remote.opencms-module-config>${oc.webapp.path}/WEB-INF/config/opencms-modules.xml</file.remote.opencms-module-config>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>1.6.0</version>
                </plugin>

                <plugin>
                    <groupId>org.codehaus.gmaven</groupId>
                    <artifactId>groovy-maven-plugin</artifactId>
                    <version>2.0</version>
                </plugin>

                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>properties-maven-plugin</artifactId>
                    <version>1.0.0</version>
                </plugin>

                <!-- https://mvnrepository.com/artifact/org.apache.maven.plugins/maven-antrun-plugin -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>1.8</version>
                </plugin>

                <plugin>
                    <artifactId>maven-invoker-plugin</artifactId>
                    <version>3.0.1</version>
                    <configuration>
                        <pom>tasks.xml</pom>
                        <showVersion>true</showVersion>
                        <streamLogs>true</streamLogs>
                        <showErrors>true</showErrors>
                        <properties>
                            <root>${root}</root>

                            <db.user>${db.user}</db.user>
                            <oc.db.user>${oc.db.user}</oc.db.user>
                            <oc.db.password>${oc.db.password}</oc.db.password>
                            <oc.db.name>${oc.db.name}</oc.db.name>

                            <dump.id>${dump.id}</dump.id>
                            <oc.webapp.path>${oc.webapp.path}</oc.webapp.path>

                            <file.local.dump>${file.local.dump}</file.local.dump>
                            <file.local.opencms-module-config>${file.local.opencms-module-config}</file.local.opencms-module-config>
                            <file.remote.opencms-module-config>${file.remote.opencms-module-config}</file.remote.opencms-module-config>
                        </properties>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <!-- check local.properties files -->
            <plugin>
                <groupId>org.codehaus.gmaven</groupId>
                <artifactId>groovy-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>check local.properties</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <source><![CDATA[
                                import java.nio.file.*
                                import org.apache.maven.plugin.*

                                boolean exists = Files.exists(Paths.get(properties['root'], 'local.properties'))
                                if (!exists) {
                                    throw new MojoExecutionException("<root>/local.properties does not exist")
                                } else {
                                    println 'Ok. local.properties found'
                                }
                                ]]></source>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- read property files -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${root}/default.properties</file>
                                <file>${root}/local.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- create data dir if not exist -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <mkdir dir="${data.dir}"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>drop-user</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <goals>
                                        <goal>compile</goal>
                                    </goals>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>drop-db</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <executions>
