                                    </goals>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>drop</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>drop-db</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <goals>
                                        <goal>compile</goal>
                                    </goals>
                                    <profiles>
                                        <profile>drop-db</profile>
                                    </profiles>
                                </configuration>
                            </execution>
                            <execution>
                                <id>drop-user</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <goals>
                                        <goal>compile</goal>
                                    </goals>
                                    <profiles>
                                        <profile>drop-user</profile>
                                    </profiles>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>restore</id>
            <build>
                <plugins>
                    <!-- copy config -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>remove config file</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <echo>move '${file.remote.opencms-module-config}' to '${file.remote.opencms-module-config}.bck'</echo>
                                        <move file="${file.remote.opencms-module-config}"
                                              tofile="${file.remote.opencms-module-config}.bck"
                                              overwrite="true"
                                              failonerror="false"
                                        />
                                        <echo>copy '${file.local.opencms-module-config}' to '${file.remote.opencms-module-config}'</echo>
                                        <copy file="${file.local.opencms-module-config}"
                                              tofile="${file.remote.opencms-module-config}"
                                              overwrite="true"
                                        />
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- copy db -->
                    <plugin>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>drop-db</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <goals>
                                        <goal>compile</goal>
                                    </goals>
                                    <profiles>
                                        <profile>drop-db</profile>
                                    </profiles>
                                </configuration>
                            </execution>
                            <execution>
                                <id>drop-user</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <goals>
                                        <goal>compile</goal>
                                    </goals>
                                    <profiles>
                                        <profile>drop-user</profile>
                                    </profiles>
                                </configuration>
                            </execution>
                            <execution>
                                <id>create-user</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <goals>
                                        <goal>compile</goal>
                                    </goals>
                                    <profiles>
                                        <profile>create-user</profile>
                                    </profiles>
                                </configuration>
                            </execution>
                            <execution>
                                <id>create-db</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <goals>
                                        <goal>compile</goal>
                                    </goals>
                                    <profiles>
                                        <profile>create-db</profile>
                                    </profiles>
                                </configuration>
                            </execution>
                            <execution>
                                <id>restore-db</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <goals>
                                        <goal>compile</goal>
                                    </goals>
                                    <profiles>
                                        <profile>restore-db</profile>
                                    </profiles>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>backup</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>remove config file</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <echo>copy '${file.remote.opencms-module-config}' to '${file.local.opencms-module-config}'</echo>
                                        <echo>remote: ${file.remote.opencms-module-config}</echo>
                                        <copy file="${file.remote.opencms-module-config}"
                                              tofile="${file.local.opencms-module-config}"
                                              overwrite="false"
                                        />
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>restore-db</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <goals>
                                        <goal>compile</goal>
                                    </goals>
                                    <profiles>
                                        <profile>dump-db</profile>
                                    </profiles>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>delete</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
